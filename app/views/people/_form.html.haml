= form_for @person do |f|
  -if @person.errors.any?
    #error_explanation
      %h2= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:"
      %ul
        - @person.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :paid_every
    = f.number_field :paid_every
  .field
    = f.label :paid_interval
    = f.text_field :paid_interval
  .field
    = f.label :paid_start
    = f.text_field :paid_start
  .field
    = f.label :typical_payment
    = f.text_field :typical_payment
  .actions
    = f.submit 'Save'
