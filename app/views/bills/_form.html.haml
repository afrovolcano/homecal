= form_for @bill do |f|
  -if @bill.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bill.errors.count, "error")} prohibited this bill from being saved:"
      %ul
        - @bill.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :group_name
    = f.text_field :group_name
  .field
    = f.label :bill_name
    = f.text_field :bill_name
  .field
    = f.label :due_day
    = f.number_field :due_day
  .field
    = f.label :avg_bill
    = f.text_field :avg_bill
  .actions
    = f.submit 'Save'
